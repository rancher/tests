# Dockerfile for Airgap Go Testing
# Provides Go toolchain, gotestsum, OpenTofu, Ansible, and AWS CLI for test execution

ARG TOFU_VERSION=1.10.7
ARG GOTESTSUM_VERSION=v1.13.0

FROM --platform=linux/amd64 registry.suse.com/bci/golang:1.25

ARG TOFU_VERSION
ARG GOTESTSUM_VERSION

# Install runtime dependencies
RUN zypper --non-interactive install --no-recommends \
    bash \
    curl \
    git \
    openssh-clients \
    python3 \
    python3-pip \
    ca-certificates \
    && zypper clean -a

# Install Ansible and AWS CLI
RUN pip3 install --no-cache-dir ansible awscli

# Install OpenTofu
RUN curl -Lo /tmp/tofu.tar.gz "https://github.com/opentofu/opentofu/releases/download/v${TOFU_VERSION}/tofu_${TOFU_VERSION}_linux_amd64.tar.gz" \
    && tar -xzf /tmp/tofu.tar.gz -C /usr/local/bin/ \
    && rm /tmp/tofu.tar.gz \
    && chmod +x /usr/local/bin/tofu

# Install gotestsum (pinned version for reproducible builds)
ENV GOBIN=/usr/local/bin
RUN go install gotest.tools/gotestsum@${GOTESTSUM_VERSION}
ENV GOBIN=

# Create working directory
WORKDIR /workspace

# Verify installations
RUN tofu version && \
    ansible --version && \
    aws --version && \
    go version && \
    gotestsum --version

# Default to sh shell (compatible with docker run sh -c)
CMD ["/bin/sh"]
