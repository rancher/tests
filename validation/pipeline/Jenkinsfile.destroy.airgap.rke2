def planDestruction() {
    logInfo('Creating destruction plan with proper workspace environment')

    def planScript = """
cd ${env.QA_INFRA_WORK_PATH}

echo 'ðŸŽ¯ Creating Destruction Plan'
echo '=========================='
echo "Target workspace: ${env.TARGET_WORKSPACE}"

# Select the target workspace before attempting destruction
echo "Selecting target workspace: ${env.TARGET_WORKSPACE}"

# If TF_WORKSPACE is set in the environment, OpenTofu will override workspace commands.
# Unset it temporarily to allow explicit workspace selection.
if [ -n "${'$'}TF_WORKSPACE" ]; then
    echo 'TF_WORKSPACE is set in environment; unsetting temporarily to allow workspace selection'
    unset TF_WORKSPACE
fi

echo "Available workspaces:"
tofu -chdir=tofu/aws/modules/airgap workspace list

if tofu -chdir=tofu/aws/modules/airgap workspace select ${env.TARGET_WORKSPACE} 2>/dev/null; then
    echo "âœ… Successfully selected workspace: ${env.TARGET_WORKSPACE}"
else
    echo "âŒ ERROR: Could not select workspace: ${env.TARGET_WORKSPACE}"
    echo "This workspace may not exist or may have been deleted"
    echo "Available workspaces:"
    tofu -chdir=tofu/aws/modules/airgap workspace list
    exit 1
fi

# Verify we're in the correct workspace
CURRENT_WORKSPACE=\$(tofu -chdir=tofu/aws/modules/airgap workspace show | xargs)
echo "Active workspace: \$CURRENT_WORKSPACE"

if [ "\$CURRENT_WORKSPACE" != "${env.TARGET_WORKSPACE}" ]; then
    echo "âŒ ERROR: Workspace selection failed"
    echo "Expected: ${env.TARGET_WORKSPACE}"
    echo "Current: \$CURRENT_WORKSPACE"
    exit 1
fi

echo 'Creating minimal terraform variables for destruction (dynamic from variables.tf)...'

VARS_FILE="tofu/aws/modules/airgap/${env.TERRAFORM_VARS_FILENAME}"
TF_VARS_DEF_FILE="tofu/aws/modules/airgap/variables.tf"

if [ ! -f "\$TF_VARS_DEF_FILE" ]; then
  echo "variables.tf not found at \$TF_VARS_DEF_FILE"
  echo "Cannot generate minimal tfvars dynamically."
  exit 1
fi

echo "# Minimal configuration for destruction (auto-generated)" > "\$VARS_FILE"
echo "# Only required variables (without defaults) are included with safe placeholders" >> "\$VARS_FILE"

cat <<'AWK_SCRIPT' > /tmp/gen-destroy-tfvars.awk
BEGIN {
  in=0; name=""; type=""; has_default=0
}
/^variable[[:space:]]*"/ {
  in=1; has_default=0; type="";
  name=\$2; gsub(/"/,"",name)
}
/type[[:space:]]*=/ {
  if (in) {
    type=\$0
  }
}
/default[[:space:]]*=/ {
  if (in) { has_default=1 }
}
/}/ {
  if (in) {
    if (!has_default) {
      # sanitize name for HCL output
      if (index(type, "list(") > 0) {
        printf("%s = []\n", name)
      } else if (index(type, "map(") > 0 || index(type, "object(") > 0) {
        printf("%s = {}\n", name)
      } else if (index(type, "number") > 0) {
        printf("%s = 0\n", name)
      } else if (index(type, "bool") > 0) {
        printf("%s = false\n", name)
      } else {
        # default to empty string for strings/any
        printf("%s = \"\"\n", name)
      }
    }
    in=0; name=""; type=""; has_default=0
  }
}
AWK_SCRIPT

awk -f /tmp/gen-destroy-tfvars.awk "\$TF_VARS_DEF_FILE" >> "\$VARS_FILE"

echo "âœ… Created minimal terraform variables for destruction at \$VARS_FILE"

echo "âœ… Created minimal terraform variables for destruction"

echo
echo 'Step 2: Attempting destruction planning...'

# Re-export TF_WORKSPACE so subsequent operations use the correct workspace
export TF_WORKSPACE="${env.TARGET_WORKSPACE}"

# Local variable for tfvars filename to avoid Groovy interpolation conflicts
TFVARS="${env.TERRAFORM_VARS_FILENAME}"

# First try without tfvars (OpenTofu should read everything from state)
if tofu -chdir=tofu/aws/modules/airgap plan -destroy -input=false -refresh=false -out=destroy-plan 2>/dev/null; then
    echo "âœ… Destruction plan created successfully (no tfvars needed)"
else
    echo "Planning without tfvars failed, trying with minimal tfvars..."
    
    if tofu -chdir=tofu/aws/modules/airgap plan -destroy -input=false -refresh=false -var-file=\$TFVARS -out=destroy-plan; then
        echo "âœ… Destruction plan created successfully (with minimal tfvars)"
    else
        echo "âŒ ERROR: Destruction planning failed"
        echo
        echo "Attempting to auto-fill missing required variables and retry..."
        PLAN_ERR=\$(tofu -chdir=tofu/aws/modules/airgap plan -destroy -input=false -refresh=false -var-file=\$TFVARS 2>&1 || true)
        echo "\$PLAN_ERR" | sed -n '1,120p'

        # Extract missing variable names from error output
        MISSING_VARS=\$(echo "\$PLAN_ERR" | grep -oE 'input variable "[^"]+" is not set' | awk -F'"' '{print $2}' | sort -u)

        if [ -n "\$MISSING_VARS" ]; then
            echo "Discovered missing variables: \$MISSING_VARS"
            for VAR in \$MISSING_VARS; do
                if ! grep -q "^\$VAR\\s*=\\s*" tofu/aws/modules/airgap/\$TFVARS; then
                    echo "\$VAR = \"\"" >> tofu/aws/modules/airgap/\$TFVARS
                fi
            done
            echo "Updated tfvars with missing variables:" 
            cat tofu/aws/modules/airgap/\$TFVARS

            # Retry plan once
            if tofu -chdir=tofu/aws/modules/airgap plan -destroy -input=false -refresh=false -var-file=\$TFVARS -out=destroy-plan; then
                echo "âœ… Destruction plan created successfully after auto-filling variables"
            else
                echo "âŒ ERROR: Destruction planning still failed after auto-fill"
                exit 1
            fi
        else
            echo "No missing variable names were detected in the error output."
            exit 1
        fi
        echo
        echo "Debugging destruction planning failure:"
        echo "1. Checking current state resources:"
        tofu -chdir=tofu/aws/modules/airgap state list | head -10 || echo "Could not list state resources"
        
        echo "2. Checking configuration validation:"
        tofu -chdir=tofu/aws/modules/airgap validate || echo "Configuration validation failed"
        
        echo "3. Attempting plan without output file for detailed error:"
        tofu -chdir=tofu/aws/modules/airgap plan -destroy -input=false -var-file=\$TFVARS 2>&1 | head -20 || echo "Plan generation failed"
        
        echo "4. Checking required variables:"
        tofu -chdir=tofu/aws/modules/airgap plan -destroy -input=false -var-file=\$TFVARS 2>&1 | grep -i "required" || echo "No specific variable requirements found"
        
        exit 1
    fi
fi

# Step 3: Verify plan file was created
if [ ! -f tofu/aws/modules/airgap/destroy-plan ]; then
    echo "âŒ ERROR: destroy-plan file was not created"
    echo "Contents of module directory:"
    ls -la tofu/aws/modules/airgap/
    exit 1
fi

PLAN_SIZE=\$(stat -c%s tofu/aws/modules/airgap/destroy-plan 2>/dev/null || echo 0)
echo "Plan file size: \$PLAN_SIZE bytes"

if [ "\$PLAN_SIZE" -eq 0 ]; then
    echo "âŒ ERROR: Plan file is empty"
    exit 1
fi

echo
echo 'Step 4: Generating destruction plan summary...'
if tofu -chdir=tofu/aws/modules/airgap show -no-color destroy-plan > destruction-plan-summary.txt; then
    echo "âœ… Destruction plan summary generated successfully"
    
    echo "Plan summary (first 30 lines):"
    head -30 destruction-plan-summary.txt
    
    echo
    DESTROY_COUNT=\$(grep -c "will be destroyed" destruction-plan-summary.txt || echo 0)
    echo "Resources to be destroyed: \$DESTROY_COUNT"
    
    if [ "\$DESTROY_COUNT" -eq 0 ]; then
        echo "âš ï¸ WARNING: No resources marked for destruction in plan"
        echo "This could indicate:"
        echo "  1. Infrastructure was already destroyed"
        echo "  2. State file issues"
        echo "  3. Configuration mismatch"
        
        if [ "${params.FORCE_DESTROY ?: 'false'}" != "true" ]; then
            echo "âŒ No resources to destroy and FORCE_DESTROY not enabled"
            exit 1
        else
            echo "âš ï¸ FORCE_DESTROY enabled, continuing despite no resources"
        fi
    else
        echo "âœ… Found \$DESTROY_COUNT resources scheduled for destruction"
    fi
    
else
    echo "âŒ ERROR: Failed to generate destruction plan summary"
    exit 1
fi

echo
echo "âœ… Destruction plan created and validated successfully"
echo "   - Workspace: \$CURRENT_WORKSPACE"
echo "   - Resources to destroy: \$DESTROY_COUNT"
echo "   - Plan file size: \$PLAN_SIZE bytes"
"""

    executeScriptInContainerWithWorkspace(planScript)
}

